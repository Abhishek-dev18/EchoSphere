<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log In</title>
    <link rel="stylesheet" href="/css/user/login_email.css" />
    <link rel="stylesheet" href="/css/user/mainlogin.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="container-fluid">
      <div class="row no-gutter">
        <!-- The image half -->

        <!-- The content half -->
        <div class="col-md-6 bg-light p-0">
          <div class="login d-flex align-items-center py-5">
            <div class="container">
              <div class="row">
                <div class="col-lg-10 col-xl-7 mx-auto">
                  <h3 class="display-6 mb-5 intro-text">Welcome</h3>
                  <div id="loginMessage" style="display: none" class="alert alert-warning alert-dismissible fade show" role="alert"></div>
                  <!-- <form method="POST" action="/user/login"> -->
                  <div class="form-group mb-3">
                    <input
                      class="usernameField"
                      id="email"
                      placeholder="Email"
                      name="email"
                      type="email"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <input
                      class="usernameField"
                      id="password"
                      placeholder="Password"
                      name="password"
                      type="password"
                      required
                    />
                  </div>
                  <div class="custom-control custom-checkbox mb-3">
                    <input
                      id="customCheck1"
                      type="checkbox"
                      checked
                      class="custom-control-input"
                    />
                    <label
                      for="customCheck1"
                      class="custom-control-label text-secondary"
                      >Remember password</label
                    >
                    <a href="/user/forgotemail" class="forgot">
                      Forgot Password</a
                    >
                  </div>
                  <br />
                  <button
                    id="loginEmail"
                    onclick="loginUser()"
                    class="text-justify"
                  >
                    <span class="text">Login</span>
                  </button>
                  <p class="ot-text text-secondary">
                    Don't have a account?
                    <a href="/user/Signup" id="text-design"> Sign Up </a>
                  </p>
                  <!-- </form> -->
                </div>
              </div>
            </div>
            <!-- End -->
          </div>
        </div>
        <div class="col-md-6 d-none d-md-flex bg-image"></div>

        <!-- End -->
      </div>
    </div>
    <script>
      async function loginUser() {
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;

        const params = new URLSearchParams();
        params.append("email", email);
        params.append("password", password);

        const response = await fetch("/user/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
          body: params,
        });

        const data = await response.json();
        const message = document.getElementById("loginMessage");
        if (data.redirect) {
          window.location.href = data.redirect ;
        } else {
          message.innerHTML = `<strong">${data.error}</strong>`;
          message.style.display = "block";
        }

        console.log(data);
        setTimeout(() => {
          message.style.display = "none";
        }, 5000);
      }
    </script>
  </body>
</html>
