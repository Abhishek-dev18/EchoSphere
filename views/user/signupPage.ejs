<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Create an account</title>
        <meta name="description" content="Sign up for a new account">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/user/login_new.css">
        <link rel="stylesheet" href="/css/user/signUp_new.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    </head>
    <body>
        
        <!-- SIGN UP LEFT CONTAINER -->
        <section class="right-container SignUp-left">
            <div class="align-container">
                <div class="heading">
                    <h1 class="h1">Create an account</h1>
                    <div id="loginMessage"></div>
                </div>
                <br>
                <form class="login-form" onsubmit="register(event)">
                    <!-- First name -->
                    <div class="mb-3 input-container">
                        <label for="firstName" class="form-label"></label>
                        <input type="text" id="firstName" class="form-control input-box" placeholder="First Name" required>
                    </div>
                    <!-- Last name -->
                    <div class="mb-3 input-container">
                        <label for="lastname" class="form-label"></label>
                        <input type="text" id="lastname" class="form-control input-box" placeholder="Last Name" required>
                    </div>
                    <!-- Email -->
                    <div class="mb-3 input-container">
                        <label for="email" class="form-label"></label>
                        <input type="email" id="email" class="form-control input-box" placeholder="Email" required>
                    </div>
                    <!-- Password -->
                    <div class="mb-3 input-container">
                        <label for="password" class="form-label"></label>
                        <input type="password" id="password" class="form-control input-box" placeholder="Password" required>
                    </div>
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input checkbox" type="checkbox" value="" id="termsCheck" required>
                        <label class="form-check-label" for="termsCheck">
                            By creating an account, I agree to the <a href="#" class="span1">Terms of use</a> and <a href="#" class="span1">Privacy Policy</a>
                        </label>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary Login-btn">Create an account</button>
                </form>
                <br>
                <a href="/user" class="span"><span>Login instead</span></a>
            </div>
        </section>
        
        <!-- SIGN UP RIGHT CONTAINER -->
        <section class="left-container SignUp-right">
            <div class="left-container-contents">
                <img class="white" src="/images/Vector_white.svg">
                <img class="yellow" src="/images/Vector_yellow_signup.svg">
                <img class="blue" src="/images/Vector_blue_signup.svg">
                <img class="red" src="/images/Vector_red_signup.svg">
            </div>
            <img class="SignUp-logo" src="/images/file_3.svg">
        </section>
        
        <script src="/js/signPage.js"></script>
        
    </body>
</html>
